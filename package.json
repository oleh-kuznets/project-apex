{
  "name": "project-apex",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test --watch --coverage",
    "test:browser": "ng test --watch --coverage --browsers=chromium",
    "test:coverage": "ng test --watch=false --progress=false --coverage",
    "storybook": "ng run @apexlib/foundation:storybook",
    "build-storybook": "ng run @apexlib/foundation:build-storybook"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@11.4.2",
  "dependencies": {
    "@angular/common": "^21.1.0",
    "@angular/compiler": "^21.1.0",
    "@angular/core": "^21.1.0",
    "@angular/forms": "^21.1.0",
    "@angular/platform-browser": "^21.1.0",
    "@angular/router": "^21.1.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@analogjs/storybook-angular": "^2.2.2",
    "@analogjs/vite-plugin-angular": "^2.2.2",
    "@angular-devkit/architect": "^0.2101.0",
    "@angular-devkit/build-angular": "^21.1.0",
    "@angular-devkit/core": "^21.1.0",
    "@angular/build": "^21.1.0",
    "@angular/cli": "^21.1.0",
    "@angular/compiler-cli": "^21.1.0",
    "@angular/platform-browser-dynamic": "^21.1.0",
    "@compodoc/compodoc": "^1.2.1",
    "@storybook/addon-a11y": "^10.1.11",
    "@storybook/addon-docs": "^10.1.11",
    "@storybook/angular": "^10.1.11",
    "@storybook/builder-vite": "^10.2.0",
    "@vitest/browser-playwright": "^4.0.18",
    "@vitest/coverage-v8": "^4.0.18",
    "jsdom": "^27.1.0",
    "ng-packagr": "^21.1.0",
    "storybook": "^10.1.11",
    "typescript": "~5.9.2",
    "vite-plugin-node-polyfills": "^0.25.0",
    "vitest": "^4.0.8"
  }
}
